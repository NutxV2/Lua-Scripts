repeat
    task.wait(0.1)
until game:IsLoaded() and _G.Horst_SetDescription

local Players = game:GetService("Players")
local plr = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Shared = ReplicatedStorage:WaitForChild("Shared")

local Equipments = require(ReplicatedStorage.Shared.Data.Equipments)
local Knit = require(Shared.Packages.Knit)
local PlayerController = Knit.GetController("PlayerController")
local Replica = PlayerController.Replica

local Pickaxes = {}
local Gold
local Race
local Level

local TargetAxeList = {
    ["Arcane Pickaxe"] = true,
    ["Demonic Pickaxe"] = true,
    ["Magma Pickaxe"] = true,
    ["Frost Pickaxe"] = true,
    ["Prismatic Pickaxe"] = true,
}


-- Mapping Race à¸à¸±à¸š Emoji
local RaceEmojis = {
    ["Demon"] = "ğŸ‘¿",
    ["Angel"] = "ğŸ˜‡",
    ["Archangel"] = "ğŸ‘‘",
    ["Unknown"] = "â“", -- à¸à¸£à¸“à¸µà¹„à¸¡à¹ˆà¹€à¸ˆà¸­à¹€à¸œà¹ˆà¸²
}

local function formatNumberShort(n)
    n = tonumber(n) or 0

    if n >= 1_000_000_000 then
        return string.format("%.1fb", n / 1_000_000_000):gsub("%.0b", "b")
    elseif n >= 1_000_000 then
        return string.format("%.1fm", n / 1_000_000):gsub("%.0m", "m")
    elseif n >= 1_000 then
        return string.format("%.1fk", n / 1_000):gsub("%.0k", "k")
    else
        return tostring(n)
    end
end

while true do
    Gold = Replica.Data.Gold or 0
    Race = Replica.Data.Race or "Unknown"
    Level = Replica.Data.Level or 0

    local foundAxes = {}

    for _, item in pairs(Replica.Data.Inventory.Equipments) do
        if typeof(item) == "table" then
            if Equipments.Items.Pickaxe[item.Name] then 
                table.insert(Pickaxes, item.Name) 
            end

            if TargetAxeList[item.Name] then
                table.insert(foundAxes, item.Name)
            end
        end
    end

    local axeText = "âŒ Not found Axe"

    if #foundAxes > 0 then
        for i = 1, #foundAxes do
            foundAxes[i] = "âœ… " .. foundAxes[i]
        end
        axeText = table.concat(foundAxes, ", ")
    end

    -- à¹€à¸¥à¸·à¸­à¸ emoji à¸•à¸²à¸¡ Race
    local raceEmoji = RaceEmojis[Race] or "â“"

    _G.Horst_SetDescription(
        "ğŸšï¸ Level: " .. tostring(Level) ..
        " â›ï¸ Pickaxes: " .. axeText ..
        " ğŸ’° Gold: " .. formatNumberShort(Gold) ..
        " " .. raceEmoji .. " Race: " .. tostring(Race)
    )

    table.clear(Pickaxes)
    task.wait(10)
end
