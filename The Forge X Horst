repeat
    task.wait(0.1)
until game:IsLoaded() and _G.Horst_SetDescription

local Players = game:GetService("Players")
local plr = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Shared = ReplicatedStorage:WaitForChild("Shared")

local Equipments = require(ReplicatedStorage.Shared.Data.Equipments)
local Knit = require(Shared.Packages.Knit)
local PlayerController = Knit.GetController("PlayerController")
local Replica = PlayerController.Replica

-- ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£ Pickaxe ‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö
local TargetPickaxes = {
    "Arcane Pickaxe",
    "Demonic Pickaxe",
    "Magma Pickaxe",
}

local Pickaxes = {}
local Gold

while true do
    Gold = Replica.Data.Gold or 0

    local race = Replica.Data.Race or "Unknown"
    local level = Replica.Data.Level or 0

    -- ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÄ‡∏õ‡πá‡∏ô ‚ùå ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏Å‡πà‡∏≠‡∏ô
    local PickaxeStatus = {}
    for _, axeName in ipairs(TargetPickaxes) do
        PickaxeStatus[axeName] = "‚ùå " .. axeName
    end

    -- ‡∏ï‡∏£‡∏ß‡∏à‡∏Ç‡∏≠‡∏á‡πÉ‡∏ô‡∏Å‡∏£‡∏∞‡πÄ‡∏õ‡πã‡∏≤
    for _, item in pairs(Replica.Data.Inventory.Equipments) do
        if typeof(item) == "table" then
            if Equipments.Items.Pickaxe[item.Name] then

                -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡πÄ‡∏à‡∏≠ = ‚úÖ
                if PickaxeStatus[item.Name] then
                    PickaxeStatus[item.Name] = "‚úÖ " .. item.Name
                end

                table.insert(Pickaxes, item.Name)
            end
        end
    end

    -- ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏• Log ‡∏ó‡∏µ‡∏•‡∏∞‡∏≠‡∏±‡∏ô
    for _, axeName in ipairs(TargetPickaxes) do
        print(PickaxeStatus[axeName])
    end

    -- Log ‡πÄ‡∏î‡∏¥‡∏°
    _G.Horst_SetDescription(
        "üìà Level: " .. level ..
        " üè∑Ô∏è Race: " .. race ..
        " ‚õèÔ∏è Pickaxes: " .. table.concat(Pickaxes, ", ") ..
        " ü™ô Gold: " .. string.format("%d", Gold)
    )

    table.clear(Pickaxes)
    task.wait(10)
end
