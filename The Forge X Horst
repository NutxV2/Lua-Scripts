repeat
    task.wait(0.1)
until game:IsLoaded() and _G.Horst_SetDescription -- wait horst loaded

local Players = game:GetService("Players")
local plr = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Shared = ReplicatedStorage:WaitForChild("Shared")

local Equipments = require(ReplicatedStorage.Shared.Data.Equipments)
local Knit = require(Shared.Packages.Knit)
local PlayerController = Knit.GetController("PlayerController")
local Replica = PlayerController.Replica

local Pickaxes = {}
local Gold
local Race
local Level

-- ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£ Axe ‡∏û‡∏¥‡πÄ‡∏®‡∏©‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏ï‡∏£‡∏ß‡∏à
local TargetAxeList = {
    ["Arcane Pickaxe"] = true,
    ["Demonic Pickaxe"] = true,
    ["Magma Pickaxe"] = true,
}

while true do
    Gold = Replica.Data.Gold or 0
    Race = Replica.Data.Race or "Unknown"
    Level = Replica.Data.Level or 0

    local foundAxe = "‚ùå Not found Axe"

    for _, item in pairs(Replica.Data.Inventory.Equipments) do
        if typeof(item) == "table" then
            -- ‡πÄ‡∏Å‡πá‡∏ö pickaxe ‡∏ï‡∏≤‡∏°‡πÄ‡∏î‡∏¥‡∏°
            if Equipments.Items.Pickaxe[item.Name] then 
                table.insert(Pickaxes, item.Name) 
            end

            -- ‡∏ï‡∏£‡∏ß‡∏à Axe ‡∏û‡∏¥‡πÄ‡∏®‡∏©
            if TargetAxeList[item.Name] then
                foundAxe = "‚úÖ " .. item.Name
            end
        end
    end

    _G.Horst_SetDescription(
        "üéöÔ∏è Level: " .. tostring(Level) ..
        " ‚õèÔ∏è Pickaxes: " .. table.concat(Pickaxes, ", ") ..
        " üí∞ Gold: " .. string.format("%d", Gold) ..
        " üß¨ Race: " .. tostring(Race) ..
        " ü™ì Axe: " .. foundAxe
    )

    table.clear(Pickaxes)
    task.wait(10)
end
